                            <MudAutocomplete T="string" 
                                           Label="City" 
                                           SearchFunc="SearchCities"
                                           Value="_selectedCity"
                                           ValueChanged="OnCityChanged"
                                           Variant="Variant.Outlined"
                                           Clearable="true" />
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudSelect T="string" 
                                     Label="State" 
