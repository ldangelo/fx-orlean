                                       Label="Technologies"
                                       SearchFunc="SearchTechnologies"
                                       MultiSelection                                       SelectedValues="_selectedTechnologies"
                                       SelectedValuesChanged="OnTechnologiesChanged"
                                       Variant="Variant.Outlined"
                                       Clearable="true" />
                        
