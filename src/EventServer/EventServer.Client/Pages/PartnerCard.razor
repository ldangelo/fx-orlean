@using org.fortium.fx.common
@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager

<MudCard Outlined="true">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4">@(_partner.GetFullName())</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.subtitle1">@(_partner.Title)</MudText>
        <MudText Typo="Typo.subtitle2">Fortium Partners</MudText>
        <br/>
        <div MudCardContentstyle="display: flex; flex-direction: row; gap: 10px;">
            <MudText>@(_partner.EmailAddress)</MudText>
            <MudText>@(_partner.PrimaryPhone)</MudText>
        </div>
        <MudText Variant="Variant.Outlined">@_partner.GetLocation()</MudText>
        <MudText Variant="Variant.Outlined">@_meetingURL</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public Partner? _partner { get; set; } = null!;
    private string _meetingURL;

    protected override async Task OnInitializedAsync()
    {
        _meetingURL = NavigationManager.ToAbsoluteUri("/meeting/" + _partner.EmailAddress).ToString();
    }

}