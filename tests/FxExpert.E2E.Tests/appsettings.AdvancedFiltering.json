{
  "Authentication": {
    "EffectiveTimeout": 45000,
    "WaitTimeout": 30000,
    "UseVisibleBrowser": false,
    "BrowserWidth": 1920,
    "BrowserHeight": 1080,
    "EnableTracing": true,
    "EnableVideo": false,
    "SlowMo": 100
  },
  "TestSettings": {
    "BaseUrl": "https://localhost:8501",
    "ScreenshotPath": "screenshots/advanced-filtering",
    "TestDataPath": "TestData",
    "MaxRetries": 2,
    "DefaultTimeout": 15000,
    "FilterTimeout": 10000,
    "NavigationTimeout": 20000
  },
  "AdvancedFilteringTests": {
    "EnableMobileTests": true,
    "EnablePerformanceTests": true,
    "EnableAccessibilityTests": true,
    "MobileViewports": [
      { "Width": 375, "Height": 667, "Name": "iPhone SE" },
      { "Width": 414, "Height": 896, "Name": "iPhone 11" },
      { "Width": 360, "Height": 640, "Name": "Android" }
    ],
    "TestIndustries": [
      "Technology",
      "Healthcare", 
      "Financial Services",
      "Manufacturing",
      "Retail"
    ],
    "TestTechnologies": [
      "AWS",
      "Azure",
      "React",
      "Python",
      "Node.js",
      "Docker",
      "Kubernetes"
    ],
    "TestCertifications": [
      "AWS Solutions Architect",
      "PMP",
      "CISSP",
      "Azure Architect",
      "Scrum Master"
    ],
    "TestLanguages": [
      "English",
      "Spanish", 
      "French",
      "German",
      "Chinese"
    ],
    "TestRateRanges": [
      { "Min": 200, "Max": 500 },
      { "Min": 500, "Max": 1000 },
      { "Min": 1000, "Max": 2000 }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/advanced-filtering-tests-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}